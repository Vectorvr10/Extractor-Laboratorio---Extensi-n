{
  "manifest_version": 3,
  "name": "Extractor de Laboratorio",
  "version": "1.0.0",
  "description": "Herramienta para extraer datos de exámenes médicos del HIS",
  "permissions": ["activeTab", "clipboardRead", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["<all_urls>"]
  }]
}
